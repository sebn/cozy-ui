@require 'settings/breakpoints.styl'
@require 'tools/mixins'

.Hero
    margin-left auto
    margin-right auto

    &-title
        text-align center
        margin rem(48) 0

    &-subtitle
        margin-bottom 0

        +small-screen()
            margin-top rem(8)

    p
        line-height 1.25

    &-sections
        display flex
        justify-content space-around

        +small-screen()
            flex-direction column
            align-items center

    &-section
        max-width rem(300)
        text-align center

        +small-screen()
            max-width auto
            margin-bottom rem(32)

    &-cta
        text-align center
